---
const education = [
  {
    id: 1,
    titulo: "Ingeniería Informática",
    institucion: "Universidad Nacional Federico Villarreal",
    periodo: "2018 - 2024",
    descripcion:
      "Carrera enfocada en formar profesionales en tecnologías de la información. Promueve el desarrollo de habilidades analíticas y técnicas para enfrentar los desafíos tecnológicos con creatividad y eficiencia.",
    habilidades: ["Html", "CSS", "JavaScript", "SQL", "Python"],
    imagen: "/images/Escudo_UNFV.webp",
  },
  {
    id: 2,
    titulo: "Oracle Next Education",
    institucion: "Alura Latam - Oracle",
    periodo: "Ene-Jun 2024",
    descripcion:
      "Programa educativo de Oracle en colaboración con Alura Latam que forma desarrolladores web full stack, integrando tecnologías clave como JavaScript, React, HTML y CSS. El programa fortalece habilidades blandas, como comunicación efectiva y trabajo en equipo.",
    habilidades: ["Html", "CSS", "JavaScript", "React", "Habilidades blandas"],
    imagen: "/images/Alura_logo.webp",
  },
];
---

<section
  id="educacion"
  class="sectionEducation w-full max-w-[1000px] self-center text-[#212121] flex flex-col gap-5 md:gap-10 px-5 py-10 sm:py-24 scroll-mt-[62px]"
>
  <h2
    class="text-xl md:text-2xl lg:text-4xl w-fit bg-gradient-to-r from-[#9898A6] to-[#fdfdfe] text-transparent bg-clip-text uppercase font-normal tracking-[.96px]"
  >
    Educación
  </h2>
  {
    education.map((edu) => (
      <article class="p-5 border border-[#575861] bg-[#0F1014] rounded-lg shadow-md flex flex-col md:flex-row gap-5 items-center">
        <img
          class="aspect-video object-contain h-24 md:h-40 my-0 sm:my-3"
          src={edu.imagen}
          alt={`Imagen de ${edu.titulo}`}
          loading="lazy"
        />
        <section class="flex flex-col gap-4 border-t md:border-l pt-5 md:pt-0 md:pl-5 border-[#575861] md:border-t-0">
          <header class="flex flex-col gap-2">
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0">
              <h3 class="text-xl md:text-2xl font-semibold text-[#C58FFF]">
                {edu.titulo}
              </h3>
              <p class="text-xs md:text-sm font-light text-[#9898A6]">
                {edu.periodo}
              </p>
            </div>
            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-1 sm:gap-0">
              <h3 class="text-sm sm:text-base lg:text-lg font-light italic text-[#FFBB88]">
                {edu.institucion}
              </h3>
            </div>
          </header>
          <p class="text-xs sm:text-sm lg:text-base text-pretty text-[#9898A6]">
            {edu.descripcion}
          </p>
          <footer class="flex flex-col gap-2">
            <h4 class="text-sm sm:text-base lg:text-lg font-medium text-[#fdfdfe]">
              Habilidades principales:
            </h4>
            <ul class="flex justify-center sm:justify-normal flex-wrap gap-3 sm:gap-5">
              {edu.habilidades.map((habilidad) => (
                <li class="rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors border-transparent bg-[#575861] text-[#fdfdfe]">
                  {habilidad}
                </li>
              ))}
            </ul>
          </footer>
        </section>
      </article>
    ))
  }
</section>

<script>
  import ScrollReveal from "scrollreveal";

  document.addEventListener("DOMContentLoaded", function () {
    ScrollReveal().reveal(".sectionEducation", {
      duration: 1000, // Duración de la animación
      origin: "top", // Dirección de la animación
      distance: "100px", // Distancia de desplazamiento
      viewOffset: {
        // Configura el desplazamiento de vista
        top: 100, // Mueve el inicio de la animación un poco más adentro (ajusta este valor a tu necesidad)
        right: 0,
        bottom: 0,
        left: 0,
      },
      reset: false, // Si se debe reiniciar la animación al salir y entrar del viewport
    });
  });
</script>

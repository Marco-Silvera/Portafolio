    transition: background-color 5000s ease-in-out 0s; /* Solución para algunos navegadores */
  }

  input:-webkit-autofill:focus {
    background-color: #0f1014 !important; /* Fondo negro cuando está enfocado */
    color: #fff !important;
  }
</style>

<script>
  import ScrollReveal from "scrollreveal";

  document.addEventListener("DOMContentLoaded", function () {
    ScrollReveal().reveal(".sectionContact", {
      duration: 1000, // Duración de la animación
      origin: "left", // Dirección de la animación
      distance: "200px", // Distancia de desplazamiento
      viewOffset: {
        // Configura el desplazamiento de vista
        top: 100, // Mueve el inicio de la animación un poco más adentro (ajusta este valor a tu necesidad)
        right: 0,
        bottom: 0,
        left: 0,
      },
      reset: false, // Si se debe reiniciar la animación al salir y entrar del viewport
    });
  });

  const form = document.getElementById("form");
  const result = document.getElementById("result");

  form.addEventListener("submit", function (e) {
    e.preventDefault();

    // Obtener valores de los campos
    const mensaje = form.message.value.trim();

    if (mensaje.length < 4) {
      result.innerHTML = `
      <p class="font-semibold italic text-red-500">
        El mensaje debe tener al menos 4 caracteres.
      </p>`;
      return;
    }

    const formData = new FormData(form);
    const object = Object.fromEntries(formData);
    const json = JSON.stringify(object);
    result.innerHTML = `
      <p class="font-semibold italic text-white">
        Espere por favor...
      </p>`;

    fetch("https://api.web3forms.com/submit", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Accept: "application/json",
      },
      body: json,
    })
      .then(async (response) => {
        let json = await response.json();
        if (response.status == 200) {
          result.innerHTML = `
      <p class="font-semibold italic text-green-500">
        Enviado correctamente!
      </p>`;
        } else {
          console.log(response);
          result.innerHTML = json.message;
        }
      })
      .catch((error) => {
        console.log(error);
        result.innerHTML = "¡Algo salió mal!";
      })
      .then(function () {
        form.reset();
        setTimeout(() => {
          result.style.display = "none";
        }, 3000);
      });
  });
</script>
